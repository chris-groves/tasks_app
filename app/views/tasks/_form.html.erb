<%= form_with model: task do |form| %>
  <div>
    <%= form.label :description %><br>
    <%= form.text_field :description %>
    <% @task.errors.full_messages_for(:description).each do |task| %>
      <div><%= task %></div>
      <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
